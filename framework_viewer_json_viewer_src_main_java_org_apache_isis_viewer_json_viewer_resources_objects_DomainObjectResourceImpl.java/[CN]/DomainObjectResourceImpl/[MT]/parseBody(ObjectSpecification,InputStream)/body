{
  List<?> arguments=parseBody(body);
  if (arguments.size() != 1) {
    throw new WebApplicationException(responseOfBadRequest("Body should contain 1 argument representing a value of type '" + resourceFor(objectSpec) + "'"));
  }
  ObjectAdapter proposedValueAdapter=objectAdapterFor(objectSpec,arguments.get(0));
  return proposedValueAdapter;
}
