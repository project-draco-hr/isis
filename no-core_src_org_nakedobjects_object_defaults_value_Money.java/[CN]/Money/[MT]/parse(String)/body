{
  if (text.trim().equals("")) {
    clear();
  }
 else {
    try {
      setValue(CURRENCY_FORMAT.parse(text).doubleValue());
    }
 catch (    ParseException tryAgain) {
      try {
        setValue(NUMBER_FORMAT.parse(text).doubleValue());
      }
 catch (      ParseException e) {
        throw new ValueParseException(e,"Invalid number");
      }
    }
  }
}
