{
  if (!strictChecking) {
    return;
  }
  List<MediaType> clientMediaTypes=getResourceContext().getHttpHeaders().getAcceptableMediaTypes();
  if (!clientMediaTypes.contains(MediaType.APPLICATION_JSON_TYPE)) {
    throw JsonApplicationException.create(HttpStatusCode.NOT_ACCEPTABLE,"Client %s header %s does not include %s",HttpHeaderNames.ACCEPT,clientMediaTypes,MediaType.APPLICATION_JSON_TYPE);
  }
}
