{
  Size size=left.getRequiredSize();
  size.extend(getPadding());
  size.extendWidth(5);
  if (right != null) {
    Size rightSize=right.getRequiredSize();
    size.ensureHeight(rightSize.getHeight());
    size.extendWidth(rightSize.getWidth());
  }
 else {
    size.extendWidth(150);
  }
  return size;
}
