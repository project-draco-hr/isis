{
  Location l=new Location(location);
  Padding padding=getPadding();
  l.subtract(padding.getLeft(),padding.getTop());
  if (left.getBounds().contains(location)) {
    return left;
  }
 else   if (right != null && right.getBounds().contains(location)) {
    return right;
  }
 else {
    return null;
  }
}
