{
  Consent valid=object.isValid(action,null);
  if (valid.isAllowed()) {
    String description=getName(view) + ": " + action.getDescription();
    if (action.hasReturn()) {
      description+=" returns a " + action.getReturnType().getSingularName();
    }
    return new Allow(description);
  }
 else {
    return valid;
  }
}
