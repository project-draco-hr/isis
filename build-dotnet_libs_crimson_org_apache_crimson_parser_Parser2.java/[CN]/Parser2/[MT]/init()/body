{
  in=null;
  attTmp=new AttributesExImpl();
  strTmp=new StringBuffer();
  nameTmp=new char[20];
  nameCache=new NameCache();
  if (namespaces) {
    nsSupport=new NamespaceSupport();
    if (supportValidation && isValidating && !prefixes) {
      nsAttTmp=new Vector();
    }
  }
  isStandalone=false;
  rootElementName=null;
  isInAttribute=false;
  inExternalPE=false;
  doLexicalPE=false;
  donePrologue=false;
  entities.clear();
  notations.clear();
  params.clear();
  elements.clear();
  ignoreDeclarations=false;
  builtin("amp","&#38;");
  builtin("lt","&#60;");
  builtin("gt",">");
  builtin("quot","\"");
  builtin("apos","'");
  if (locale == null)   locale=Locale.getDefault();
  if (resolver == null)   resolver=new Resolver();
  setHandlers();
}
