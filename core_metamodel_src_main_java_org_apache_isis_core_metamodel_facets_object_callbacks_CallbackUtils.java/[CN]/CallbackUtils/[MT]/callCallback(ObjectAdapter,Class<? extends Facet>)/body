{
  final CallbackFacet facet=(CallbackFacet)object.getSpecification().getFacet(cls);
  if (facet != null) {
    try {
      facet.invoke(object);
    }
 catch (    final RuntimeException e) {
      throw new DomainModelException("Callback failed.  Calling " + facet + " on "+ object,e);
    }
  }
}
