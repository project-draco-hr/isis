{
  if (operationName.equals("activateOptions") && appender instanceof OptionHandler) {
    OptionHandler oh=(OptionHandler)appender;
    oh.activateOptions();
    return "Options activated.";
  }
 else   if (operationName.equals("setLayout")) {
    Layout layout=(Layout)OptionConverter.instantiateByClassName((String)params[0],Layout.class,null);
    appender.setLayout(layout);
    registerLayoutMBean(layout);
  }
  return null;
}
