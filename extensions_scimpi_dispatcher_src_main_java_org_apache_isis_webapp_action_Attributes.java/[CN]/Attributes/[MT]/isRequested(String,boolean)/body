{
  String flag=getOptionalProperty(name,true);
  if (flag == null) {
    return defaultValue;
  }
 else {
    String value=" " + flag.toLowerCase().trim() + " ";
    if (TRUE.indexOf(value) >= 0) {
      return true;
    }
 else     if (FALSE.indexOf(value) >= 0) {
      return false;
    }
 else {
      throw new PropertyException("Attribute " + name + " has illegal value "+ flag);
    }
  }
}
