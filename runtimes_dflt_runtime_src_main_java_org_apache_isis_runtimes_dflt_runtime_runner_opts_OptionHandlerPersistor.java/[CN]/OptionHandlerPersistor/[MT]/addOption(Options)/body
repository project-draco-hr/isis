{
  Object[] objectPersistenceMechanisms=installerRepository.getInstallers(PersistenceMechanismInstaller.class);
  Option option=OptionBuilder.withArgName("name|class name").hasArg().withLongOpt(OBJECT_PERSISTENCE_LONG_OPT).withDescription("object persistence mechanism to use (ignored if type is prototype or client): " + availableInstallers(objectPersistenceMechanisms) + "; or class name").create(OBJECT_PERSISTENCE_OPT);
  options.addOption(option);
}
