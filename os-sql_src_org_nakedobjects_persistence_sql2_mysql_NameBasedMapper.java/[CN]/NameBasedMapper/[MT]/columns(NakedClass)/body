{
  StringBuffer sb=new StringBuffer();
  Field[] fields=cls.getFields();
  for (int i=0; i < fields.length; i++) {
    if (fields[i].isDerived() || fields[i] instanceof OneToManyAssociation) {
      continue;
    }
    if (i > 0) {
      sb.append(", ");
    }
    sb.append(fields[i].getName().replace(' ','_').toLowerCase());
  }
  return sb.toString();
}
