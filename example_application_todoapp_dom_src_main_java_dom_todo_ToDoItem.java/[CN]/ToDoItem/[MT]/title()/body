{
  final TitleBuffer buf=new TitleBuffer();
  buf.append(getDescription());
  if (isComplete()) {
    buf.append("- Completed!");
  }
 else {
    try {
      final LocalDate dueBy=wrapperFactory.wrap(this).getDueBy();
      if (dueBy != null) {
        buf.append(" due by",dueBy);
      }
    }
 catch (    final HiddenException ignored) {
    }
  }
  return buf.toString();
}
