{
  updateNotifier.checkViewsForUpdates();
  rootView.layout();
  if (redrawArea != null) {
    Bounds area;
synchronized (this) {
      area=redrawArea;
      redrawArea=null;
      area.translate(insets.left,insets.top);
    }
    renderingArea.repaint(area.x,area.y,area.width,area.height);
  }
}
