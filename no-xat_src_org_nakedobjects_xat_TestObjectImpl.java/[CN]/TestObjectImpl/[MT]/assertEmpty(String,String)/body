{
  Field field=fieldFor(fieldName);
  assertFieldVisible(fieldName,field);
  TestNaked actual=getField(fieldName);
  Object object=actual.getForObject();
  if (object instanceof NakedValue) {
    NakedValue value=((NakedValue)object);
    if (!value.isEmpty()) {
      throw new NakedAssertionFailedError(expected(message) + " '" + fieldName+ "' to be empty, but contained "+ value.title().toString());
    }
  }
 else {
    if (object != null) {
      throw new NakedAssertionFailedError(expected(message) + " '" + fieldName+ "' to be empty, but contained "+ ((NakedObject)object).title().toString());
    }
  }
}
