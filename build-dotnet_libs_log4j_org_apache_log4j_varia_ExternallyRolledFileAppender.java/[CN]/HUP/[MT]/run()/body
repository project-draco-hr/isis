{
  while (!isInterrupted()) {
    try {
      ServerSocket serverSocket=new ServerSocket(port);
      while (true) {
        Socket socket=serverSocket.accept();
        LogLog.debug("Connected to client at " + socket.getInetAddress());
        new Thread(new HUPNode(socket,er)).start();
      }
    }
 catch (    Exception e) {
      e.printStackTrace();
    }
  }
}
