{
  try {
    double amt=CURRENCY_FORMAT.parse(in).doubleValue();
    amount=(int)(amt * 100);
  }
 catch (  ParseException tryAgain) {
    try {
      double amt=NUMBER_FORMAT.parse(in).doubleValue();
      amount=(int)(amt * 100);
    }
 catch (    ParseException e) {
      throw new ValueParseException(e,"Invalid number");
    }
  }
}
