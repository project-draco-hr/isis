{
  String loginView=request.getOptionalProperty(LOGIN_VIEW);
  if (loginView == null) {
    Logon.loginForm(request,".");
  }
 else {
    if (loginView.trim().length() == 0) {
      loginView=DEFAULT_LOGIN_VIEW;
    }
    request.appendHtml("<a div class=\"link\" href=\"" + loginView + "\">Log in</a>");
  }
}
