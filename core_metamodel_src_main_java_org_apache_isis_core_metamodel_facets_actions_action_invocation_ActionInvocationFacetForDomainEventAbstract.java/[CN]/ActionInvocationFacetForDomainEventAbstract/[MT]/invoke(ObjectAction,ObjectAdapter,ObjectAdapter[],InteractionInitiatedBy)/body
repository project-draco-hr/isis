      if (visibleObjects != null) {
        return getAdapterManager().adapterFor(visibleObjects);
      }
    }
 else {
      boolean visible=ObjectAdapter.Util.isVisible(invocationResultAdapter,interactionInitiatedBy);
      if (!visible) {
