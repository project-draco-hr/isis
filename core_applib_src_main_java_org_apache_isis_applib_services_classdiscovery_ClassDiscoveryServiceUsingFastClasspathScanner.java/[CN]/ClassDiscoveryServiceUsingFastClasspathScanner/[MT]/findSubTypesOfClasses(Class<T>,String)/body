{
  final Set<Class<? extends T>> classes=Sets.newLinkedHashSet();
  new FastClasspathScanner(packagePrefix).matchSubclassesOf(type,new SubclassMatchProcessor<T>(){
    @Override public void processMatch(    final Class<? extends T> aClass){
      classes.add(aClass);
    }
  }
).scan();
  return classes;
}
