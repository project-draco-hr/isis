{
  Writer out=context.getWriter();
  for (int i=0; i < value.length(); i++) {
    int c=value.charAt(i);
switch (c) {
case '<':
      out.write("&lt;");
    continue;
case '>':
  out.write("&gt;");
continue;
case '&':
out.write("&amp;");
continue;
case '\'':
out.write("&apos;");
continue;
case '"':
out.write("&quot;");
continue;
default :
out.write(c);
continue;
}
}
}
