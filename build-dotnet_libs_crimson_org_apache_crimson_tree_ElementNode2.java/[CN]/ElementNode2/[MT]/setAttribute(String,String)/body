{
  NodeBase att;
  if (readonly)   throw new DomEx(DomEx.NO_MODIFICATION_ALLOWED_ERR);
  if (!XmlNames.isName(name)) {
    throw new DomEx(DOMException.INVALID_CHARACTER_ERR);
  }
  if (attributes == null)   attributes=new AttributeSet(this);
  if ((att=(NodeBase)attributes.getNamedItem(name)) != null)   att.setNodeValue(value);
 else {
    att=new AttributeNode1(name,value,true,null);
    att.setOwnerDocument((XmlDocument)getOwnerDocument());
    attributes.setNamedItem(att);
  }
}
