{
  if (!((line == (content.noLines() - 1)) && (character == content.getText(line).length()))) {
    if (character == content.getText(line).length()) {
      line++;
      character=0;
    }
    int size=content.getText(line).length();
    do {
      character++;
    }
 while ((character < size) && (content.getText(line).charAt(character) == ' '));
    while ((character < size) && (content.getText(line).charAt(character) != ' '))     character++;
  }
}
