{
  Boolean value=(Boolean)cache.get(localeName);
  if (value != null)   return value.booleanValue();
  ClassLoader loader=null;
  for (; ; ) {
    String name=bundleName + "_" + localeName;
    try {
      Class.forName(name);
      cache.put(localeName,Boolean.TRUE);
      return true;
    }
 catch (    Exception e) {
    }
    InputStream in;
    if (loader == null)     loader=getClass().getClassLoader();
    name=name.replace('.','/');
    name=name + ".properties";
    if (loader == null)     in=ClassLoader.getSystemResourceAsStream(name);
 else     in=loader.getResourceAsStream(name);
    if (in != null) {
      cache.put(localeName,Boolean.TRUE);
      return true;
    }
    int index=localeName.indexOf('_');
    if (index > 0)     localeName=localeName.substring(0,index);
 else     break;
  }
  cache.put(localeName,Boolean.FALSE);
  return false;
}
