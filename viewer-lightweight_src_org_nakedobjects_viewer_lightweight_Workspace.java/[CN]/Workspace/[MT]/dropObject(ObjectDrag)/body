{
  showArrowCursor();
  View source=drag.getSource();
  if (source instanceof ClassView) {
    LOG.info("new " + getName() + " instance");
    newInstance(((ClassView)source).forNakedClass(),getWorkspace(),drag.getViewLocation(),!drag.isShift());
  }
 else {
    DesktopView newIcon=(DesktopView)ViewFactory.getViewFactory().createIconView(((ObjectView)source).getObject(),null);
    newIcon.setLocation(drag.getViewLocation());
    getWorkspace().addIcon(newIcon);
  }
}
