{
  Location at=drag.getMouseLocationRelativeToView();
  if (isOnResize(at)) {
    isResizing=true;
    ViewResizeOutline outline=new ViewResizeOutline(drag,getView(),ViewResizeOutline.BOTTOM_RIGHT);
    getViewManager().setOverlayView(outline);
    outline.markDamaged();
    return outline;
  }
 else {
    if (canChangeValue()) {
      isResizing=false;
      cursor.cursorAt(at);
      resetSelection();
    }
  }
  markDamaged();
  return null;
}
