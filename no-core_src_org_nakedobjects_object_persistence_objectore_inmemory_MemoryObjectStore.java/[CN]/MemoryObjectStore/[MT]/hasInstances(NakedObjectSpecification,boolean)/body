{
  if (instancesFor(spec).hasInstances()) {
    return true;
  }
  if (includeSubclasses) {
    NakedObjectSpecification[] subclasses=spec.subclasses();
    for (int i=0; i < subclasses.length; i++) {
      if (hasInstances(subclasses[i],includeSubclasses)) {
        return true;
      }
    }
  }
  return false;
}
