{
  writer.print("<span class=\"");
  writer.print(className);
  writer.print("\"");
  if (description != null) {
    writer.print(" title=\"");
    writer.print(description);
    writer.print("\"");
  }
  writer.print(">");
  if (value != null) {
    writer.print(StringEscapeUtils.escapeHtml(value));
  }
  writer.print("</span>");
}
