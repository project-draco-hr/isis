{
  JsonNode node=getNode(path);
  if (node == null || node.isMissingNode()) {
    return null;
  }
  checkValue(path,node,"a boolean");
  if (!node.isBoolean()) {
    throw new IllegalArgumentException("'" + path + "' ("+ node.toString()+ ") is not a boolean");
  }
  return node.getBooleanValue();
}
