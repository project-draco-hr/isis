{
  if (when == org.apache.isis.applib.annotation.When.ALWAYS) {
    return org.apache.isis.metamodel.facets.When.ALWAYS;
  }
  if (when == org.apache.isis.applib.annotation.When.ONCE_PERSISTED) {
    return org.apache.isis.metamodel.facets.When.ONCE_PERSISTED;
  }
  if (when == org.apache.isis.applib.annotation.When.UNTIL_PERSISTED) {
    return org.apache.isis.metamodel.facets.When.UNTIL_PERSISTED;
  }
  return org.apache.isis.metamodel.facets.When.NEVER;
}
