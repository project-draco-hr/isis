{
  StringBuilder builder=new StringBuilder();
  boolean nextUpper=true;
  for (  char c : name.toCharArray()) {
    if (c == '_') {
      nextUpper=true;
      builder.append("-");
    }
 else {
      builder.append(nextUpper ? c : Character.toLowerCase(c));
      nextUpper=false;
    }
  }
  return builder.toString();
}
