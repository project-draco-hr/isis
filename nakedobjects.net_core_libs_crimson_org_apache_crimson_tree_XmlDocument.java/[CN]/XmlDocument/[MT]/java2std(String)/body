{
  if (encodingName == null)   return null;
  if (encodingName.startsWith("ISO8859_"))   return "ISO-8859-" + encodingName.substring(8);
  if (encodingName.startsWith("8859_"))   return "ISO-8859-" + encodingName.substring(5);
  if ("ASCII7".equalsIgnoreCase(encodingName) || "ASCII".equalsIgnoreCase(encodingName))   return "US-ASCII";
  if ("UTF8".equalsIgnoreCase(encodingName))   return "UTF-8";
  if (encodingName.startsWith("Unicode"))   return "UTF-16";
  if ("SJIS".equalsIgnoreCase(encodingName))   return "Shift_JIS";
  if ("JIS".equalsIgnoreCase(encodingName))   return "ISO-2022-JP";
  if ("EUCJIS".equalsIgnoreCase(encodingName))   return "EUC-JP";
  return encodingName;
}
