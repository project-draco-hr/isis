{
  super.drop(drag);
  NakedObject source=((ObjectContent)drag.getSourceContent()).getObject();
  if (source instanceof NakedClassSpec) {
    if (drag.isShift()) {
      getContext().getClasses().add(source);
    }
  }
 else {
    if (!drag.isShift()) {
      getContext().getObjects().add(source);
    }
  }
}
