{
  Menu menu=new Menu("JUnit");
  MenuItem mi=new MenuItem("About...");
  mi.addActionListener(new ActionListener(){
    public void actionPerformed(    ActionEvent event){
      about();
    }
  }
);
  menu.add(mi);
  menu.addSeparator();
  mi=new MenuItem("Exit");
  mi.addActionListener(new ActionListener(){
    public void actionPerformed(    ActionEvent event){
      System.exit(0);
    }
  }
);
  menu.add(mi);
  return menu;
}
