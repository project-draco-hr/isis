{
  GridBagConstraints c=new GridBagConstraints();
  c.gridx=x;
  c.gridy=y;
  c.gridwidth=w;
  c.anchor=anchor;
  c.weightx=wx;
  c.fill=fill;
  if (fill == GridBagConstraints.BOTH || fill == GridBagConstraints.VERTICAL)   c.weighty=1.0;
  c.insets=new Insets(y == 0 ? GAP : 0,x == 0 ? GAP : 0,GAP,GAP);
  p.add(co,c);
}
