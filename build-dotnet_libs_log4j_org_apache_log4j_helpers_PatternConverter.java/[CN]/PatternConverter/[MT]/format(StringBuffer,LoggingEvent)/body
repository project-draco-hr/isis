{
  String s=convert(e);
  if (s == null) {
    if (0 < min)     spacePad(sbuf,min);
    return;
  }
  int len=s.length();
  if (len > max)   sbuf.append(s.substring(len - max));
 else   if (len < min) {
    if (leftAlign) {
      sbuf.append(s);
      spacePad(sbuf,min - len);
    }
 else {
      spacePad(sbuf,min - len);
      sbuf.append(s);
    }
  }
 else   sbuf.append(s);
}
