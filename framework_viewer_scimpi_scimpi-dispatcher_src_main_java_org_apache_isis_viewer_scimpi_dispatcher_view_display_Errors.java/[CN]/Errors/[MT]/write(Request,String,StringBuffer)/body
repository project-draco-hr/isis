{
  if (cls == null) {
    cls="error";
  }
  String message=(String)request.getContext().getVariable("_error-message");
  if (message != null) {
    buffer.append(message);
  }
  String details=(String)request.getContext().getVariable("_error-details");
  if (details != null) {
    buffer.append(details);
  }
}
