{
  if (isBusy(identifiedView)) {
    return;
  }
  try {
    viewer.translate(me);
    final Location location=createLocation(me.getPoint());
    spy.setLocationInViewer(location);
    if (canDrag) {
      spy.reset();
      if (drag == null) {
        dragStart(me);
        redraw();
      }
 else {
        drag(me);
        redraw();
      }
    }
  }
 catch (  final Exception e) {
    interactionException("mouseDragged",e);
  }
}
