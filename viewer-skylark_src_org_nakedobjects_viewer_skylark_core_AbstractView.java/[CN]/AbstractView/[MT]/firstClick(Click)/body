{
  Workspace workspace=getWorkspace();
  if (workspace != null) {
    if (click.isButton2() || (click.isButton1() && click.isShift())) {
      workspace.lower(getView());
      markDamaged();
    }
 else     if (click.isButton1()) {
      workspace.raise(getView());
      markDamaged();
    }
  }
}
