{
  Component c=super.getTreeCellRendererComponent(tree,value,sel,expanded,leaf,row,hasFocus);
  TreeModel model=tree.getModel();
  if (model instanceof TestTreeModel) {
    TestTreeModel testModel=(TestTreeModel)model;
    Test t=(Test)value;
    String s="";
    if (testModel.isFailure(t)) {
      if (fFailureIcon != null)       setIcon(fFailureIcon);
      s=" - Failed";
    }
 else     if (testModel.isError(t)) {
      if (fErrorIcon != null)       setIcon(fErrorIcon);
      s=" - Error";
    }
 else     if (testModel.wasRun(t)) {
      if (fOkIcon != null)       setIcon(fOkIcon);
      s=" - Passed";
    }
    if (c instanceof JComponent)     ((JComponent)c).setToolTipText(getText() + s);
  }
  setText(stripParenthesis(value));
  return c;
}
