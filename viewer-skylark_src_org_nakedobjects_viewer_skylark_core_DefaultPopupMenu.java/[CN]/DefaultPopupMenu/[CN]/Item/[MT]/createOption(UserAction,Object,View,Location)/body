{
  Item item=new Item();
  if (action == null) {
    item.isBlank=true;
  }
 else {
    item.isBlank=false;
    item.action=action;
    item.name=action.getName(view);
    item.description=action.getDescription(view);
    item.isDisabled=action.disabled(view).isVetoed();
    item.reason=action.disabled(view).getReason();
  }
  return item;
}
