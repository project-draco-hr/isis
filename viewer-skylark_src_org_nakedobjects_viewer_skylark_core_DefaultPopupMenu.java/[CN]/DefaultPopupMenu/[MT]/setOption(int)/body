{
  if (option != optionIdentified) {
    optionIdentified=option;
    Item item=items[optionIdentified];
    if (item.isBlank) {
      showStatus("");
    }
 else     if (item.reason == "") {
      showStatus(item.description == null ? "" : item.description);
    }
 else {
      showStatus(item.reason);
    }
    markDamaged();
  }
}
