{
  StringBuffer b=new StringBuffer();
  b.append(super.debugDetails());
  b.append("\nLayout:    ");
  String layout=getLayout() == null ? "none" : getLayout().getClass().getName();
  b.append(layout.substring(layout.lastIndexOf('.') + 1));
  b.append("\nSubviews:  ");
  debugFieldDetails(b,0);
  return b.toString();
}
