{
  super.draw(canvas);
  Enumeration e=components.elements();
  while (e.hasMoreElements()) {
    View view=(View)e.nextElement();
    if (canvas.intersects(view.getBounds())) {
      Canvas c=canvas.createSubcanvas(view.getBounds().x,view.getBounds().y,view.getBounds().width,view.getBounds().height);
      view.draw(c);
    }
  }
}
