{
  if (isLayoutInvalid()) {
    getViewManager().showWaitCursor();
    super.layout();
    View[] subviews=getSubviews();
    Bounds bounds=new Bounds(getSize());
    for (int i=0; i < subviews.length; i++) {
      subviews[i].limitBoundsWithin(bounds);
    }
    super.layout();
    getViewManager().showDefaultCursor();
  }
}
