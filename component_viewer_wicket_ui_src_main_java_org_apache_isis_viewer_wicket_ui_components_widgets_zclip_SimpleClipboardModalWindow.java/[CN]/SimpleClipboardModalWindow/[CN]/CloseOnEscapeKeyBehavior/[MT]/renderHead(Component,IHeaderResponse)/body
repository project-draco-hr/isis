{
  String javaScript="" + "$(document).ready(function() {\n" + "\n"+ "  // close with escape\n"+ "  $(document).bind('keyup', function(evt) {\n"+ "    if (evt.keyCode == 27) {\n" + getCallbackScript() + "\n"+ "        evt.preventDefault();\n"+ "    }\n"+ "  });\n"+ "     \n"+ "     \n"+ "  // open with alt+]    \n"+ "  $(document).bind('keyup', function(evt) {\n"+ "    if (evt.keyCode == 221 && evt.altKey) {\n"+ "      $('.zeroClipboardPanel a.copyLink').click();\n"+ "    }\n"+ "  });\n"+ "});";
  String id="closeSimpleClipboardModal";
  response.render(JavaScriptHeaderItem.forScript(javaScript,id));
