{
  final CharSequence escapedMsg=escape(origMsg);
  buf.append("$.jGrowl(\"").append(escapedMsg).append('\"');
  buf.append(", {");
  buf.append("theme: \"jgrowl-").append(cssClassSuffix).append("\"");
  if (sticky) {
    buf.append(", sticky: true");
  }
  buf.append("}");
  buf.append(");\n");
}
