{
  final CharSequence escapedMsg=escape(origMsg);
  buf.append("$.growl(\"").append(escapedMsg).append("&#160;&#160;&#160;").append('"');
  buf.append(", {");
  buf.append("type: \"").append(cssClassSuffix).append('"');
  buf.append(", delay: " + (sticky ? "0" : "2000"));
  buf.append('}');
  buf.append(");\n");
}
