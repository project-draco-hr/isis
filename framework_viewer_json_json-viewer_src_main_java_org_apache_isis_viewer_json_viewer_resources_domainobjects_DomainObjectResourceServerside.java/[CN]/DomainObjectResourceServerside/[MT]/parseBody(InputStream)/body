{
  try {
    byte[] byteArray=ByteStreams.toByteArray(body);
    String bodyAsString=new String(byteArray,Charsets.UTF_8);
    List<?> arguments=jsonMapper.readAsList(bodyAsString);
    return arguments;
  }
 catch (  JsonParseException e) {
    throw new WebApplicationException(e,responseOf(HttpStatusCode.BAD_REQUEST,"could not parse body",e));
  }
catch (  JsonMappingException e) {
    throw new WebApplicationException(e,responseOf(HttpStatusCode.BAD_REQUEST,"could not map body to a Map structure",e));
  }
catch (  IOException e) {
    throw new WebApplicationException(e,responseOf(HttpStatusCode.BAD_REQUEST,"could not read body",e));
  }
}
