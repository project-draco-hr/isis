{
  if (features == null) {
    features=new Hashtable();
  }
  features.put(name,new Boolean(value));
  try {
    newSAXParserImpl();
  }
 catch (  SAXNotSupportedException e) {
    features.remove(name);
    throw e;
  }
catch (  SAXNotRecognizedException e) {
    features.remove(name);
    throw e;
  }
}
