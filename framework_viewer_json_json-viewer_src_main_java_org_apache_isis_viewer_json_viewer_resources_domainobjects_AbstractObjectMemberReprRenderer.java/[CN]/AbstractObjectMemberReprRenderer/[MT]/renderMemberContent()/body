{
  if (mode.isInline()) {
    addDetailsLinkIfPersistent();
  }
  if (mode.isStandalone()) {
    addLinkToSelf();
    addLinkToUp();
  }
  if (mode.isFollowed() || mode.isStandalone()) {
    addMutatorsIfEnabled();
    putExtensionsIsisProprietary();
    addLinksToFormalDomainModel();
    addLinksIsisProprietary();
  }
}
