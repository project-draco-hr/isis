{
  if (clearFacet == null) {
    return;
  }
  if (!domainEventHelper.hasEventBusService()) {
    clearFacet.clearProperty(targetAdapter);
    return;
  }
  final Object oldValue=getterFacet.getProperty(targetAdapter);
  final PropertyDomainEvent<?,?> event=domainEventHelper.postEventForProperty(AbstractDomainEvent.Phase.EXECUTING,eventType(),null,getIdentified(),targetAdapter,oldValue,null);
  clearFacet.clearProperty(targetAdapter);
  final Object actualNewValue=getterFacet.getProperty(targetAdapter);
  if (Objects.equal(oldValue,actualNewValue)) {
    return;
  }
  domainEventHelper.postEventForProperty(AbstractDomainEvent.Phase.EXECUTED,eventType(),verify(event),getIdentified(),targetAdapter,oldValue,actualNewValue);
}
