{
  NodeBase child;
  if (readonly)   throw new DomEx(DomEx.NO_MODIFICATION_ALLOWED_ERR);
  if (!(oldChild instanceof NodeBase))   throw new DomEx(DomEx.NOT_FOUND_ERR);
  child=(NodeBase)oldChild;
  for (int i=0; i < length; i++) {
    if (children[i] != child)     continue;
    if ((i + 1) != length)     System.arraycopy(children,i + 1,children,i,(length - 1) - i);
    length--;
    children[length]=null;
    child.setParentNode(null,-1);
    mutated();
    return oldChild;
  }
  throw new DomEx(DomEx.NOT_FOUND_ERR);
}
