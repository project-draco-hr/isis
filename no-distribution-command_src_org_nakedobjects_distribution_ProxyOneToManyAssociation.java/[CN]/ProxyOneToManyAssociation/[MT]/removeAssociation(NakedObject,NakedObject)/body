{
  if (isPersistent(inObject)) {
    LOG.debug("clear association remotely " + inObject + "/"+ associate);
    try {
      IdentityData targetReference=objectDataFactory.createIdentityData(inObject);
      IdentityData associateReference=objectDataFactory.createIdentityData(associate);
      ObjectData[] updates=connection.clearAssociation(NakedObjects.getCurrentSession(),getIdentifier().getName(),targetReference,associateReference);
      updateChangedObjects(updates);
    }
 catch (    NakedObjectRuntimeException e) {
      throw (NakedObjectRuntimeException)e.getCause();
    }
  }
 else {
    LOG.debug("clear association locally " + inObject + "/"+ associate);
    super.removeAssociation(inObject,associate);
  }
}
