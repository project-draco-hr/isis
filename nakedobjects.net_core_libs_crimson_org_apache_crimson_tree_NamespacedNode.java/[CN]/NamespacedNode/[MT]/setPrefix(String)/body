{
  if (readonly) {
    throw new DomEx(DomEx.NO_MODIFICATION_ALLOWED_ERR);
  }
  int index=qName.indexOf(':');
  if (prefix == null) {
    if (index >= 0) {
      qName=qName.substring(index + 1);
    }
    return;
  }
  if (!XmlNames.isUnqualifiedName(prefix)) {
    throw new DomEx(DomEx.INVALID_CHARACTER_ERR);
  }
  if (namespaceURI == null || "xml".equals(prefix) && !XmlNames.SPEC_XML_URI.equals(namespaceURI)) {
    throw new DomEx(DomEx.NAMESPACE_ERR);
  }
  if (getNodeType() == ATTRIBUTE_NODE) {
    if ("xmlns".equals(prefix) && !XmlNames.SPEC_XMLNS_URI.equals(namespaceURI) || "xmlns".equals(qName)) {
      throw new DomEx(DomEx.NAMESPACE_ERR);
    }
  }
  StringBuffer tmp=new StringBuffer(prefix);
  tmp.append(':');
  if (index < 0) {
    tmp.append(qName);
  }
 else {
    tmp.append(qName.substring(index + 1));
  }
  qName=tmp.toString();
}
