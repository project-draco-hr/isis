{
  super(source,absolute,relative,modifiers);
  dragging=source.pickup(this);
  if (dragging != null) {
    source.exited();
    LOG.debug("pickup " + this);
    mouseLocation=absolute;
    setDraggingLocation();
    source.getViewManager().setOverlayView(dragging);
    source.getViewManager().showHandCursor();
  }
}
