{
  final View form1=new FormSpecification(){
    @Override protected boolean include(    final Content content,    final int sequence){
      return !secondaryContent.getId().equals(content.getId());
    }
    @Override public Layout createLayout(    final Content content,    final Axes axes){
      final GridLayout gridLayout=new GridLayout();
      gridLayout.setSize(2);
      return gridLayout;
    }
  }
.createView(mainContent,axes,-1);
