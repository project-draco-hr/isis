{
  final ArrayList<ResourceStreamSource> rssList=Lists.newArrayList();
  if (firstDirectory != null) {
    rssList.add(fromFileSystem(firstDirectory));
  }
  rssList.addAll(Arrays.asList(fromFileSystem(ConfigurationConstants.DEFAULT_CONFIG_DIRECTORY),fromFileSystem(ConfigurationConstants.WEBINF_CONFIG_DIRECTORY),fromClassPath()));
  return rssList.toArray(new ResourceStreamSource[0]);
}
