{
  if (ke.getKeyCode() == KeyEvent.VK_ESCAPE) {
    if (drag != null) {
      drag.cancel();
      drag=null;
    }
    viewer.clearOverlayView();
  }
  View keyboardFocus=viewer.getFocus();
  if (keyboardFocus != null) {
    keyboardFocus.keyPressed(ke.getKeyCode(),ke.getModifiers());
  }
  redraw();
}
