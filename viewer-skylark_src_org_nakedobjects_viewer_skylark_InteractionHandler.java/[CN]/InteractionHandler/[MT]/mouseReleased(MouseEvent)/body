{
  try {
    if (drag != null) {
      mouseDragged(me);
      Location location=new Location(me.getPoint());
      drag.drag(viewer,location,me.getModifiers());
      drag.end(viewer);
      viewer.disposeOverlayView();
      redraw();
      drag=null;
    }
  }
 catch (  Exception e) {
    log(e);
  }
}
