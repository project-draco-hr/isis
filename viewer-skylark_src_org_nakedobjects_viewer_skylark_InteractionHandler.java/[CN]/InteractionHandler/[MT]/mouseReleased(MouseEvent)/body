{
  if (drag != null) {
    viewer.translate(me);
    View target=identifiedView;
    Location location=new Location(me.getPoint());
    drag.updateLocationWithinViewer(target,location);
    LOG.debug("drag ended at " + location + " over "+ target);
    drag.end();
    viewer.disposeOverlayView();
    drag=null;
    redraw();
  }
}
