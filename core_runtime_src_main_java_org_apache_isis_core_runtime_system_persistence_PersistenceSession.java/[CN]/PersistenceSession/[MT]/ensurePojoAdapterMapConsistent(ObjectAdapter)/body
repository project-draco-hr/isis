{
  final Object adapterPojo=adapter.getObject();
  final ObjectAdapter adapterAccordingToPojoAdapterMap=getPojoAdapterMap().getAdapter(adapterPojo);
  ensureThatArg(adapter,is(adapterAccordingToPojoAdapterMap),"mismatch in PojoAdapterMap: provided adapter's OID: " + adapter.getOid() + "; \n"+ " but map's adapter's OID was : "+ adapterAccordingToPojoAdapterMap.getOid());
}
