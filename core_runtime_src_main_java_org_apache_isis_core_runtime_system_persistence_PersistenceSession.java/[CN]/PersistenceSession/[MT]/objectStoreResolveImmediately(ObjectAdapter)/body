{
  ensureOpened();
  ensureInTransaction();
  if (LOG.isDebugEnabled()) {
    LOG.debug("resolveImmediately; oid=" + adapter.getOid().enString(oidMarshaller));
  }
  if (!adapter.representsPersistent()) {
    if (LOG.isDebugEnabled()) {
      LOG.debug("; not persistent - ignoring");
    }
    return;
  }
  objectStore.refreshRoot(adapter);
}
