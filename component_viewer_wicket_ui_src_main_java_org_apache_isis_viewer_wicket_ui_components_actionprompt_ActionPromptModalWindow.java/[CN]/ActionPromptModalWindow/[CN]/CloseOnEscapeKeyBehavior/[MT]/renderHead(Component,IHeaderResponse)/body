  String javaScript="" + "$(document).ready(function() {\n" + "  $(document).bind('keyup', function(evt) {\n"+ "    if (evt.keyCode == 27) {\n" + getCallbackScript() + "\n"+ "        evt.preventDefault();\n"+ "    }\n"+ "  });\n"+ "});";
