{
  Object[] connectors=installerRepository.getInstallers(IsisViewerInstaller.class);
  Option option=OptionBuilder.withArgName("name|class name").hasArg().withLongOpt(CONNECTOR_LONG_OPT).withDescription("connector to use for client requests, or for server to listen on: " + availableInstallers(connectors)).create(CONNECTOR_OPT);
  options.addOption(option);
}
