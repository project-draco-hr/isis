{
  NakedObject source=((ObjectContent)drag.getSourceContent()).getObject();
  NakedObject target=getObject();
  Consent perm=canDrop(source,target);
  if (perm.isAllowed()) {
    getViewManager().setStatus(perm.getReason());
    getState().setCanDrop();
  }
 else {
    getViewManager().setStatus(perm.getReason());
    getState().setCantDrop();
  }
  markDamaged();
}
