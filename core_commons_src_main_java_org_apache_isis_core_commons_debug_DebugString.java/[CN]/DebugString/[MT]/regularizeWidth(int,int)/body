{
  if (width > 0) {
    final int textWidth=string.length() - len;
    if (textWidth > width) {
      string.setLength(len + width - 3);
      string.append("...");
    }
 else {
      int spaces=width - textWidth;
      spaces=Math.max(0,spaces);
      string.append(SPACES.substring(0,spaces));
    }
  }
}
