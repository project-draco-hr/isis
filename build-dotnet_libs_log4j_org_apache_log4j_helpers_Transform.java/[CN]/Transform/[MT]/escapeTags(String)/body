{
  if (input == null || input.length() == 0) {
    return input;
  }
  StringBuffer buf=new StringBuffer(input.length() + 6);
  char ch=' ';
  int len=input.length();
  for (int i=0; i < len; i++) {
    ch=input.charAt(i);
    if (ch == '<') {
      buf.append("&lt;");
    }
 else     if (ch == '>') {
      buf.append("&gt;");
    }
 else {
      buf.append(ch);
    }
  }
  return buf.toString();
}
