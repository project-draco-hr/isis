{
  List<?> arguments=parseBody(body);
  if (arguments.size() != 1) {
    throw JsonApplicationException.create(HttpStatusCode.BAD_REQUEST,"Body should contain 1 argument representing a value of type '%s'",resourceFor(objectSpec));
  }
  ObjectAdapter proposedValueAdapter=objectAdapterFor(objectSpec,arguments.get(0));
  return proposedValueAdapter;
}
