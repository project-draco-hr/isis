{
  final ObjectAction action=getObjectActionThatIsVisibleAndUsable(serviceAdapter,actionId,Intent.ACCESS);
  ObjectActionRepBuilder repBuilder=ObjectActionRepBuilder.newBuilder(getResourceContext(),serviceAdapter,action).withSelf().withMutatorsIfEnabled();
  return responseOfOk(RepresentationType.OBJECT_ACTION,repBuilder,Caching.NONE).build();
}
