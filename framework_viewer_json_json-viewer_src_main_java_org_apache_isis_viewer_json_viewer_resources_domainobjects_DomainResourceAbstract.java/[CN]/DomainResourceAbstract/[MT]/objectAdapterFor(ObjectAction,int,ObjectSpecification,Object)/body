{
  try {
    return objectAdapterFor(paramSpec,arg);
  }
 catch (  ExpectedStringRepresentingValueException e) {
    throw JsonApplicationException.create(HttpStatusCode.BAD_REQUEST,"Action '%s', argument %d should be a URL encoded string representing a value of type %s",action.getId(),i,resourceFor(paramSpec));
  }
catch (  ExpectedMapRepresentingReferenceException e) {
    throw JsonApplicationException.create(HttpStatusCode.BAD_REQUEST,"Action '%s', argument %d should be a map representing a link to reference of type %s",action.getId(),i,resourceFor(paramSpec));
  }
}
