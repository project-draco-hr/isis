{
  int edge=getHeaderOffset();
  for (int i=0, cols=getColumnCount(); i < cols; i++) {
    if (xPosition >= edge - 1 && xPosition <= edge + 1) {
      return i;
    }
    edge+=getColumnWidth(i);
  }
  if (xPosition >= edge - 1 && xPosition <= edge + 1) {
    return getColumnCount();
  }
  return -1;
}
