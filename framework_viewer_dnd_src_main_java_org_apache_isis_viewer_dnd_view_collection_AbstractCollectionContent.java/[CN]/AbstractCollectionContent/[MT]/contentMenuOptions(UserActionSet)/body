{
  final ObjectAdapter collection=getCollection();
  options.addObjectMenuOptions(collection);
  options.add(new UserActionAbstract("Clear resolved",ActionType.DEBUG){
    @Override public Consent disabled(    final View component){
      return ConsentAbstract.allowIf(collection == null || !(collection.representsTransient()) || collection.isGhost());
    }
    @Override public void execute(    final Workspace workspace,    final View view,    final Location at){
      collection.changeState(ResolveState.GHOST);
    }
  }
);
}
