{
  final LabelAtFacet facet=getModel().getFacet(LabelAtFacet.class);
  if (facet != null) {
switch (facet.value()) {
case LEFT:
      formGroup.add(new CssClassAppender("label-left"));
    break;
case NONE:
  formGroup.add(new CssClassAppender("label-none"));
break;
case TOP:
formGroup.add(new CssClassAppender("label-top"));
break;
default :
break;
}
}
 else {
formGroup.add(new CssClassAppender("label-left"));
}
}
