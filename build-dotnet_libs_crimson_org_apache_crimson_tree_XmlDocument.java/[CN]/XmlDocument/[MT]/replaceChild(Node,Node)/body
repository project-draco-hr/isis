{
  if (newChild instanceof DocumentFragment) {
    int elemCount=0;
    int docCount=0;
    replaceRootElement=false;
    ParentNode frag=(ParentNode)newChild;
    Node temp;
    int i=0;
    while ((temp=frag.item(i)) != null) {
      if (temp instanceof Element)       elemCount++;
 else       if (temp instanceof DocumentType)       docCount++;
      i++;
    }
    if (elemCount > 1 || docCount > 1)     throw new DomEx(DomEx.HIERARCHY_REQUEST_ERR);
 else     replaceRootElement=true;
  }
  return super.replaceChild(newChild,refChild);
}
