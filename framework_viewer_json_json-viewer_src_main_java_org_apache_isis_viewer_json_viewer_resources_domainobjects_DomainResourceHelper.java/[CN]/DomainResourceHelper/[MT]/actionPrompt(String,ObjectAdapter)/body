{
  final ObjectAction action=getObjectActionThatIsVisibleAndUsable(serviceAdapter,actionId,Intent.ACCESS);
  RendererFactory factory=RendererFactoryRegistry.instance.find(RepresentationType.OBJECT_ACTION);
  final ObjectActionReprRenderer renderer=(ObjectActionReprRenderer)factory.newRenderer(resourceContext,null,JsonRepresentation.newMap());
  renderer.with(new ObjectAndAction(serviceAdapter,action)).asStandalone();
  return ResourceAbstract.responseOfOk(renderer,Caching.NONE).build();
}
