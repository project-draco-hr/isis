{
  super(new UserAction(){
    @Override public Consent disabled(    final View view){
      return Allow.DEFAULT;
    }
    @Override public void execute(    final Workspace workspace,    final View view,    final Location at){
      ((MinimizedView)view).close();
    }
    @Override public String getDescription(    final View view){
      return "Close " + view.getSpecification().getName();
    }
    @Override public String getHelp(    final View view){
      return null;
    }
    @Override public String getName(    final View view){
      return "Close view";
    }
    @Override public ActionType getType(){
      return ActionType.USER;
    }
  }
,target);
}
