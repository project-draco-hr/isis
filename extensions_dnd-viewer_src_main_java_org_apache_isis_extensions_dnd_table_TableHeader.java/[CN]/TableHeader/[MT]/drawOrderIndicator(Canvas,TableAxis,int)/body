{
  Shape arrow;
  arrow=new Shape();
  if (((CollectionContent)getContent()).getReverseSortOrder()) {
    arrow.addPoint(0,7);
    arrow.addPoint(3,0);
    arrow.addPoint(6,7);
  }
 else {
    arrow.addPoint(0,0);
    arrow.addPoint(6,0);
    arrow.addPoint(3,7);
  }
  canvas.drawShape(arrow,x,3,Toolkit.getColor(ColorsAndFonts.COLOR_SECONDARY2));
}
