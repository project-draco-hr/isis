{
  int area=adjust(click);
switch (area) {
case NORTH:
    topHeader.firstClick(click);
  break;
case WEST:
leftHeader.firstClick(click);
break;
case CENTER:
wrappedView.firstClick(click);
break;
case SOUTH:
horizontalScrollBar.firstClick(click);
break;
case EAST:
verticalScrollBar.firstClick(click);
break;
default :
break;
}
}
