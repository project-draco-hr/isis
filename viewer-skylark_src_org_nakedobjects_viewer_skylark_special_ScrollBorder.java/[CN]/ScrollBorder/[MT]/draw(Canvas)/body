{
  Bounds contents=contentArea();
  Color color=isOnBorder() ? Style.PRIMARY1 : Style.PRIMARY2;
  if (horizontalScrollPosition > 0 || horizontalVisibleAmount < contents.getWidth()) {
    canvas.drawSolidRectangle(0,contents.getHeight() + 1,contents.getWidth(),SCROLLBAR_WIDTH - 2,Style.SECONDARY3);
    canvas.drawSolidRectangle(horizontalScrollPosition,contents.getHeight() + 1,horizontalVisibleAmount,SCROLLBAR_WIDTH - 3,color);
    canvas.drawRectangle(horizontalScrollPosition,contents.getHeight() + 1,horizontalVisibleAmount,SCROLLBAR_WIDTH - 3,Style.SECONDARY1);
    canvas.drawRectangle(0,contents.getHeight(),contents.getWidth(),SCROLLBAR_WIDTH - 1,Style.SECONDARY2);
  }
  if (verticalScrollPosition > 0 || verticalVisibleAmount < contents.getHeight()) {
    canvas.drawSolidRectangle(contents.getWidth() + 1,0,SCROLLBAR_WIDTH - 2,contents.getHeight(),Style.SECONDARY3);
    canvas.drawSolidRectangle(contents.getWidth() + 1,verticalScrollPosition,SCROLLBAR_WIDTH - 3,verticalVisibleAmount,color);
    canvas.drawRectangle(contents.getWidth() + 1,verticalScrollPosition,SCROLLBAR_WIDTH - 3,verticalVisibleAmount,Style.SECONDARY1);
    canvas.drawRectangle(contents.getWidth(),0,SCROLLBAR_WIDTH - 1,contents.getHeight(),Style.SECONDARY2);
  }
  Offset offset=offset();
  canvas.setClip(offset.getDeltaX(),offset.getDeltaY(),contents.getWidth(),contents.getHeight());
  super.draw(canvas);
}
