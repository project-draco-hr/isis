{
  if (dragOffset == -1) {
    super.drag(drag);
  }
 else {
    if (verticalDrag) {
      int y=drag.getMouseLocationRelativeToView().getY();
      setVerticalPostion(y - dragOffset);
    }
 else {
      int x=drag.getMouseLocationRelativeToView().getX();
      setHorizontalPostion(x - dragOffset);
    }
  }
}
