{
  if (dragOffset == -1) {
    drag.move(offset());
    super.drag(drag);
  }
 else {
    if (verticalDrag) {
      int y=drag.getTargetLocation().getY();
      setVerticalPostion(y - dragOffset);
    }
 else {
      int x=drag.getTargetLocation().getX();
      setHorizontalPostion(x - dragOffset);
    }
  }
}
