{
  while (response == null && exception == null) {
    try {
      wait();
    }
 catch (    InterruptedException e) {
      LOG.error("wait (getResponse) interrupted",e);
    }
  }
  if (exception != null) {
    RuntimeException toThrow=exception;
    exception=null;
    throw toThrow;
  }
  Response r=response;
  response=null;
  notify();
  return r;
}
