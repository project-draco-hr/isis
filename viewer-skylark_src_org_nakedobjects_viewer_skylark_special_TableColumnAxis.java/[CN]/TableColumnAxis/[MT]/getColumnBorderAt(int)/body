{
  int width=getHeaderOffset();
  for (int i=0, cols=getColumnCount(); i < cols; i++) {
    if (xPosition >= width - 1 && xPosition <= width + 1) {
      return i;
    }
    width+=getColumnWidth(i);
  }
  if (xPosition >= width - 1 && xPosition <= width + 1) {
    return getColumnCount();
  }
  return -1;
}
