{
  final List<ToDoItem> items;
  if (false) {
    items=allMatches(ToDoItem.class,new Filter<ToDoItem>(){
      @Override public boolean accept(      final ToDoItem t){
        return ownedByCurrentUser(t) && !t.isComplete();
      }
    }
);
  }
 else {
    items=allMatches(new QueryDefault<ToDoItem>(ToDoItem.class,"todo_notYetComplete","ownedBy",currentUserName()));
  }
  if (items.isEmpty()) {
    getContainer().informUser("All to-do items have been completed :-)");
  }
  return items;
}
