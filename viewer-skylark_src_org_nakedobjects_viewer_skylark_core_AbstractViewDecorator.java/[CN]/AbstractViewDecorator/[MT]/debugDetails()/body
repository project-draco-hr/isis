{
  StringBuffer b=new StringBuffer();
  b.append("Decorator: ");
  debugDetails(b);
  b.append("\n           size " + getSize() + "\n");
  b.append("           req'd " + getRequiredSize() + "\n");
  b.append("           padding " + getPadding() + "\n");
  b.append("           baseline " + getBaseline() + "\n");
  b.append("\n");
  b.append(wrappedView.debugDetails());
  return b.toString();
}
