{
  int[] position=((RowLayout)getLayout()).getPositions();
  int left=getPadding().getLeft();
  for (int i=0; i < position.length; i++) {
    int x=left + position[i] + 3;
    System.out.println(at.getX() + " " + x);
    if (at.getX() - 2 < x && at.getX() + 2 > x) {
      column=i;
      getWorkspace().showColumnResizeCursor();
      return;
    }
  }
  column=-1;
  getWorkspace().showArrowCursor();
}
