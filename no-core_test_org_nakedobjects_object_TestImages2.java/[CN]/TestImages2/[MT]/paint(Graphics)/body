{
  int width=getWidth();
  int height=getHeight();
  int x=0;
  int y=0;
  g.setFont(new Font("Sans",0,9));
  for (int i=0; i < images.length; i++) {
    Image image=images[i];
    if (image != null) {
      g.drawImage(image,x,y,32,32,null);
    }
    g.drawString(files[i],x,y + HEIGHT - 3);
    x=x + WIDTH;
    if (x >= width) {
      x=0;
      y=y + HEIGHT;
      if (y >= height) {
        break;
      }
    }
  }
}
