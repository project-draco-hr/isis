{
  if (path == null || mode == Mode.TERMINATED) {
    return PathFollower.terminated();
  }
  if (mode == Mode.FOLLOWING_PATH) {
    Map remaining=graph.get(path);
    if (remaining != null) {
      return PathFollower.following(remaining);
    }
 else {
      return PathFollower.terminated();
    }
  }
  return PathFollower.terminated();
}
