{
  final int over=overButton(location);
  if (over == -1) {
    mouseOverButton=-1;
    final int col=column(location);
    final int row=row(location);
    if (col != mouseOverColumn || row != mouseOverRow) {
      if (isEditable) {
        mouseOverColumn=col;
        mouseOverRow=row;
      }
      markDamaged();
    }
  }
 else   if (over != mouseOverButton) {
    mouseOverButton=over;
    markDamaged();
  }
}
