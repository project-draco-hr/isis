{
  if (LOG.isDebugEnabled()) {
    LOG.debug("searching for image " + name);
  }
  Image image=loadAsResource(name);
  if (image != null) {
    return image;
  }
  final String path=directory() + name;
  image=loadAsResource(path);
  if (image != null) {
    return image;
  }
  if (alsoLoadAsFiles) {
    image=loadAsFile(path);
    if (image != null) {
      return image;
    }
  }
  return null;
}
