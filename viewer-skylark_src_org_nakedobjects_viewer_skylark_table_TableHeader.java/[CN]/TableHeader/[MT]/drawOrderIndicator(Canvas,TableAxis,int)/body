{
  Shape arrow;
  arrow=new Shape();
  if (((CollectionContent)getContent()).getReverseSortOrder()) {
    arrow.addVertex(0,7);
    arrow.addVertex(3,0);
    arrow.addVertex(6,7);
  }
 else {
    arrow.addVertex(0,0);
    arrow.addVertex(6,0);
    arrow.addVertex(3,7);
  }
  canvas.drawShape(arrow,x,3,Style.SECONDARY2);
}
