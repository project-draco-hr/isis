{
  init();
  final ObjectAdapter serviceAdapter=getServiceAdapter(serviceId);
  final OneToOneAssociation property=getPropertyThatIsVisibleAndUsable(serviceAdapter,propertyId,Intent.ACCESS);
  ResourceContext resourceContext=getResourceContext();
  final ObjectPropertyRepBuilder builder=ObjectPropertyRepBuilder.newBuilder(resourceContext,serviceAdapter,property);
  return responseOfOk(RepresentationType.OBJECT_PROPERTY,builder,Caching.ONE_DAY).build();
}
