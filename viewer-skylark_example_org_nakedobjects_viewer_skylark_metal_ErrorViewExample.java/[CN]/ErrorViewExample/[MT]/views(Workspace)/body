{
  Error object=new Error("Exception message",new NakedObjectRuntimeException("test exception"));
  NakedObject adapter=NakedObjects.getObjectLoader().createAdapterForTransient(object);
  Content content=new RootObject(adapter);
  ViewSpecification specification=null;
  ViewAxis axis=null;
  SmallErrorView view=new SmallErrorView(content,specification,axis);
  view.setLocation(new Location(100,60));
  view.setSize(view.getRequiredSize());
  workspace.addView(view);
}
