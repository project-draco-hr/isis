{
  if (hasMemberFacet(mutatorSpec.mutatorFacetType)) {
    JsonRepresentation arguments=mutatorArgs(mutatorSpec);
    JsonRepresentation detailsLink=linkToBuilder.linkToMember(mutator,memberType,objectMember,mutatorSpec.suffix).withHttpMethod(mutatorSpec.httpMethod).withArguments(arguments).build();
    representation.mapPut(mutator,detailsLink);
  }
}
