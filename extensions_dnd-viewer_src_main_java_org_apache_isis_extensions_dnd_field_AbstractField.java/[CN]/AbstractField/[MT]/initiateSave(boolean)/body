{
  BackgroundWork.runTaskInBackground(this,new BackgroundTask(){
    public void execute(){
      save();
      getParent().updateView();
      invalidateLayout();
      if (moveToNextField) {
        getFocusManager().focusNextView();
      }
    }
    public String getName(){
      return "Save field";
    }
    public String getDescription(){
      return "Saving " + getContent().windowTitle();
    }
  }
);
}
