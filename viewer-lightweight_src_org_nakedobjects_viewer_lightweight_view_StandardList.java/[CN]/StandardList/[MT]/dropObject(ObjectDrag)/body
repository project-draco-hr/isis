{
  NakedObject source=drag.getSourceObject();
  if (canAdd(source).isAllowed()) {
    NakedCollection target=((NakedCollection)getObject());
    if ((target != null) && target.canAdd(source).isAllowed()) {
      target.add(drag.getSourceObject());
      invalidateLayout();
      validateLayout();
    }
  }
}
