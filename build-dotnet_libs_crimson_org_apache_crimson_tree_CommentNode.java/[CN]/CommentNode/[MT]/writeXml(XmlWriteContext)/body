{
  Writer out=context.getWriter();
  out.write("<!--");
  if (data != null) {
    boolean sawDash=false;
    int length=data.length;
    for (int i=0; i < length; i++) {
      if (data[i] == '-') {
        if (sawDash)         out.write(' ');
 else {
          sawDash=true;
          out.write('-');
          continue;
        }
      }
      sawDash=false;
      out.write(data[i]);
    }
    if (data[data.length - 1] == '-')     out.write(' ');
  }
  out.write("-->");
}
