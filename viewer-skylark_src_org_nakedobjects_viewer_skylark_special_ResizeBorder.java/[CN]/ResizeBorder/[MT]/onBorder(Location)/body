{
  Bounds area=contentArea();
  boolean right=at.getX() >= area.getWidth();
  boolean bottom=at.getY() >= area.getHeight();
  final int status;
  if (right && bottom) {
    status=ViewResizeOutline.BOTTOM_RIGHT;
  }
 else   if (right) {
    status=ViewResizeOutline.RIGHT;
  }
 else   if (bottom) {
    status=ViewResizeOutline.BOTTOM;
  }
 else {
    status=0;
  }
  return status;
}
