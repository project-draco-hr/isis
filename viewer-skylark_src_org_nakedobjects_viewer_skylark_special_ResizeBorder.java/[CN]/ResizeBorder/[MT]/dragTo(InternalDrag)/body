{
  getViewManager().showDefaultCursor();
  ViewResizeOutline outline=((ViewResizeOutline)drag.getDragOverlay());
  if (outline != null) {
    getView().setRequiredSize(outline.getSize());
    Logger.getLogger(getClass()).debug("resizing view " + resize);
    invalidateLayout();
  }
 else {
    super.dragTo(drag);
  }
}
