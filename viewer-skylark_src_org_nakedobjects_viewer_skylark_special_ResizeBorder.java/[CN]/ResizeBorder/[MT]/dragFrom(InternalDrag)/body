{
  if (isOnBorder()) {
    direction=onBorder(drag.getRelativeLocation());
    if (direction > 0) {
      ViewResizeOutline outline;
      outline=new ViewResizeOutline(drag,getView(),direction);
      getViewManager().setOverlayView(outline);
      outline.markDamaged();
      return outline;
    }
    return null;
  }
 else {
    return super.dragFrom(drag);
  }
}
