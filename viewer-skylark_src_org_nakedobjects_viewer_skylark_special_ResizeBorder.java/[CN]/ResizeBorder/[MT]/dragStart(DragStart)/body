{
  Location location=drag.getLocation();
  if (overBorder(location)) {
    direction=onBorder(location);
    if (direction > 0) {
      return new ResizeDrag(this,new Bounds(getAbsoluteLocation(),getView().getSize()),direction);
    }
    return null;
  }
 else {
    return super.dragStart(drag);
  }
}
