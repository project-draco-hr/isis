{
  final InputStream is=getResourceAsStream(resource);
  if (is == null) {
    return null;
  }
  final Properties props=new Properties();
  try {
    props.load(is);
  }
 catch (  final IOException ex) {
    throw new RuntimeException(ex);
  }
 finally {
    try {
      is.close();
    }
 catch (    final IOException ignore) {
    }
  }
  return props;
}
