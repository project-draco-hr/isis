{
  if (aStr == null) {
    return null;
  }
  final StringBuffer buf=new StringBuffer();
  for (int i=0; i < aStr.length(); i++) {
    char c=aStr.charAt(i);
switch (c) {
case '<':
      buf.append("&lt;");
    break;
case '>':
  buf.append("&gt;");
break;
case '\"':
buf.append("&quot;");
break;
case '&':
buf.append("&amp;");
break;
default :
buf.append(c);
break;
}
}
return buf.toString();
}
