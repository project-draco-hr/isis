{
  String language, country;
  int index;
  index=localeName.indexOf('_');
  if (index == -1) {
    if (localeName.equals("de"))     return Locale.GERMAN;
    if (localeName.equals("en"))     return Locale.ENGLISH;
    if (localeName.equals("fr"))     return Locale.FRENCH;
    if (localeName.equals("it"))     return Locale.ITALIAN;
    if (localeName.equals("ja"))     return Locale.JAPANESE;
    if (localeName.equals("ko"))     return Locale.KOREAN;
    if (localeName.equals("zh"))     return Locale.CHINESE;
    language=localeName;
    country="";
  }
 else {
    if (localeName.equals("zh_CN"))     return Locale.SIMPLIFIED_CHINESE;
    if (localeName.equals("zh_TW"))     return Locale.TRADITIONAL_CHINESE;
    language=localeName.substring(0,index);
    country=localeName.substring(index + 1);
  }
  return new Locale(language,country);
}
