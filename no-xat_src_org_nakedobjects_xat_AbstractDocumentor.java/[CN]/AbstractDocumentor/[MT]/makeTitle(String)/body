{
  int pos=0;
  while ((pos < name.length()) && Character.isLowerCase(name.charAt(pos))) {
    pos++;
  }
  if (pos == name.length()) {
    return "invalid name";
  }
 else {
    StringBuffer s=new StringBuffer(name.length() - pos);
    for (int j=pos; j < name.length(); j++) {
      if ((j > pos) && Character.isUpperCase(name.charAt(j))) {
        s.append(' ');
      }
      s.append(name.charAt(j));
    }
    return s.toString();
  }
}
