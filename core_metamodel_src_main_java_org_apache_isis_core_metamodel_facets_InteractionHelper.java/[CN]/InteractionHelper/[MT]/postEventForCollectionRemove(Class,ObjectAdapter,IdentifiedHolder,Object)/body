{
  if (!hasEventBusService()) {
    return null;
  }
  try {
    final Object source=AdapterUtils.unwrap(targetAdapter);
    final CollectionInteractionEvent<?,?> event=InteractionWithCollectionRemoveFacet.Util.newEvent(eventType,source,identified.getIdentifier(),removedReference);
    event.setMode(mode);
    getEventBusService().post(event);
    return event;
  }
 catch (  Exception e) {
    throw new FatalException(e);
  }
}
