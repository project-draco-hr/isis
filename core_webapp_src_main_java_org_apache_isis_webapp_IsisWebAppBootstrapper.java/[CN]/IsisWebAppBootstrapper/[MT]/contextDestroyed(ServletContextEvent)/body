{
  LOG.info("server shutting down");
  ServletContext servletContext=ev.getServletContext();
  try {
    final IsisSystem system=(IsisSystem)servletContext.getAttribute(WebAppConstants.NAKED_OBJECTS_SYSTEM_KEY);
    if (system != null) {
      LOG.info("calling system shutdown");
      system.shutdown();
    }
  }
  finally {
    servletContext.removeAttribute(WebAppConstants.NAKED_OBJECTS_SYSTEM_KEY);
    LOG.info("server shut down");
  }
}
