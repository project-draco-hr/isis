{
  int height=0;
  int width=0;
  View[] views=view.getSubviews();
  int[] widths=((TableColumnAxis)view.getViewAxis()).getWidths();
  for (int i=0; i < views.length; i++) {
    View v=views[i];
    Size s=v.getRequiredSize();
    height=Math.max(height,s.getHeight());
    width+=widths[i] + 4;
  }
  return new Size(width,height);
}
