{
  FileOutputStream fos=null;
  try {
    fos=new FileOutputStream(outFile);
    final XMLWriter writer=new XMLWriter(fos,outformat);
    writer.write(doc);
    writer.flush();
  }
 catch (  final Exception e) {
    throw new IsisException(e);
  }
 finally {
    try {
      if (fos != null) {
        fos.close();
      }
    }
 catch (    final Exception ignore) {
    }
  }
}
