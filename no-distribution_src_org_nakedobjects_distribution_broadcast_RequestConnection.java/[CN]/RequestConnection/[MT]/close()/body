{
  if (in != null) {
    try {
      in.close();
    }
 catch (    IOException ignore) {
      LOG.error("Error while closing socket input stream",ignore);
    }
  }
  if (out != null) {
    try {
      out.close();
    }
 catch (    IOException ignore) {
      LOG.error("Error while closing socket output stream",ignore);
    }
  }
}
