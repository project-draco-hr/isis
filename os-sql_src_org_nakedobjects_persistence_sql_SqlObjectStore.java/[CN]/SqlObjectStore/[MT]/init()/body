{
  transactionOrientedConnections=new Hashtable();
  DatabaseConnectorFactory connectorFactory=(DatabaseConnectorFactory)ComponentLoader.loadComponent(BASE_NAME + ".connector",DatabaseConnectorFactory.class);
  connectionPool=new DatabaseConnectorPool(connectorFactory);
  ObjectMapperFactory mapperFactory=(ObjectMapperFactory)ComponentLoader.loadComponent(BASE_NAME + ".automapper",ObjectMapperFactory.class);
  mapperLookup=new ObjectMapperLookup();
  mapperLookup.setMapperFactory(mapperFactory,connectionPool);
  mapperLookup.init();
}
