{
  final LinkBuilder userLinkBuilder=LinkBuilder.newBuilder(getResourceContext(),Rel.USER,RepresentationType.USER,"user");
  final LinkFollower linkFollower=getLinkFollower().follow("user");
  if (linkFollower.isFollowing()) {
    final RendererFactory factory=RendererFactoryRegistry.instance.find(RepresentationType.USER);
    final UserReprRenderer renderer=(UserReprRenderer)factory.newRenderer(getResourceContext(),linkFollower,JsonRepresentation.newMap());
    renderer.with(getResourceContext().getAuthenticationSession());
    userLinkBuilder.withValue(renderer.render());
  }
  getLinks().arrayAdd(userLinkBuilder.build());
}
