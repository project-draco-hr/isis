{
  String file="/images/" + name;
  String sizeAttribute="";
  if (size > 0) {
    file=file + ".gif";
    sizeAttribute=" height=" + size;
  }
 else {
    file=file + ".gif";
    sizeAttribute=" height=" + 32;
  }
