{
  if (border == null) {
    return true;
  }
 else {
    Bounds r=new Bounds(getSize());
    Padding insets=border.getPadding(this);
    r.x+=insets.left;
    r.y+=insets.top;
    r.width-=insets.left + insets.right;
    r.height-=insets.top + insets.bottom;
    return !r.contains(mouseLocation);
  }
}
