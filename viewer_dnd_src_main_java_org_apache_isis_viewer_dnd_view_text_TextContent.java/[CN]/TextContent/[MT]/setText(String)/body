{
  blocks.removeAllElements();
  if (text == null || text.equals("")) {
    addBlock("");
  }
 else {
    final String[] tokens=text.split("\\n");
    for (int i=0; i < tokens.length; i++) {
      String token=tokens[i];
      if (useEmptyLines || token.length() > 0) {
        addBlock(token);
      }
    }
  }
}
