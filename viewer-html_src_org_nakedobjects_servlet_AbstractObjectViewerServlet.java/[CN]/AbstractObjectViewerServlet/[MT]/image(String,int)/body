{
  String file="/images/" + name;
  String sizeAttribute="";
  if (size > 0) {
    file=file + ".gif";
    sizeAttribute=" width=" + size + " height="+ size;
  }
 else {
    file=file + ".gif";
    sizeAttribute=" width=" + 32 + " height="+ 32;
  }
  return "<img" + sizeAttribute + " align=absbottom border=0 alt=icon hspace=4 src=\""+ file+ "\">";
}
