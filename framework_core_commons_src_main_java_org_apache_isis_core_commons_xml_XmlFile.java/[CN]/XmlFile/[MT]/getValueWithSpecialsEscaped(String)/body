{
  String result=s;
  for (int i=0; i < SPECIAL_CHARACTERS.length; i++) {
    final String special=SPECIAL_CHARACTERS[i];
    int pos=-1;
    while (true) {
      pos=result.indexOf(special,pos + 1);
      if (pos < 0) {
        break;
      }
      result=result.substring(0,pos) + ESCAPE_STRING[i] + result.substring(pos + special.length());
    }
  }
  return result;
}
