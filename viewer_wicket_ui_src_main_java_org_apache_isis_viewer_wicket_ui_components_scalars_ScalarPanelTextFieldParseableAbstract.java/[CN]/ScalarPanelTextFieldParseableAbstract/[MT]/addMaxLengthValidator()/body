{
  ScalarModel scalarModel=getModel();
  TextField<String> textField=getTextField();
  ObjectSpecification facetHolder=scalarModel.getTypeOfSpecification();
  MaxLengthFacet maxLengthFacet=facetHolder.getFacet(MaxLengthFacet.class);
  if (maxLengthFacet != null) {
    textField.add(StringValidator.maximumLength(maxLengthFacet.value()));
  }
}
