{
  if (noWords < 1) {
    throw new IllegalArgumentException("Truncation must be to one or more words");
  }
  int pos=0;
  int spaces=0;
  while (pos < string.length() && spaces < noWords) {
    if (string.charAt(pos) == ' ') {
      spaces++;
    }
    pos++;
  }
  if (pos < string.length()) {
    string.setLength(pos - 1);
    string.append("...");
  }
  return this;
}
