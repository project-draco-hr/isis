{
  Level level=null;
  for (  final String arg : args) {
    if (arg.equals("-" + LoggingConstants.DEBUG_OPT)) {
      level=Level.DEBUG;
      break;
    }
 else     if (arg.equals("-" + LoggingConstants.QUIET_OPT)) {
      level=Level.ERROR;
      break;
    }
 else     if (arg.equals("-" + LoggingConstants.VERBOSE_OPT)) {
      level=Level.INFO;
      break;
    }
  }
  return level;
}
