{
  if (path == null || mode == Mode.TERMINATED) {
    return LinkFollower.terminated();
  }
  if (mode == Mode.FOLLOWINGPATH) {
    Map remaining=graph.get(path);
    if (remaining != null) {
      return LinkFollower.following(remaining);
    }
 else {
      return LinkFollower.terminated();
    }
  }
  return LinkFollower.terminated();
}
