{
  final View[] views=getChildViews();
  if (views.length > 1) {
    for (int i=0; i < views.length; i++) {
      if (testView(views,i)) {
        for (int j=i - 1; j >= 0; j--) {
          if (views[j].canFocus()) {
            setFocus(views[j]);
            return;
          }
        }
        for (int j=views.length - 1; j > i; j--) {
          if (views[j].canFocus()) {
            setFocus(views[j]);
            return;
          }
        }
        return;
      }
    }
  }
}
