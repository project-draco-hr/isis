{
  Level level=null;
  for (int i=0; i < args.length; i++) {
    if (args[i].equals("-" + Constants.DEBUG_OPT)) {
      level=Level.DEBUG;
      break;
    }
 else     if (args[i].equals("-" + Constants.QUIET_OPT)) {
      level=Level.ERROR;
      break;
    }
 else     if (args[i].equals("-" + Constants.VERBOSE_OPT)) {
      level=Level.INFO;
      break;
    }
  }
  return level;
}
